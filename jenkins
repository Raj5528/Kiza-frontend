pipeline {
    agent any

    environment {
        NODE_ENV = 'development'
    }

    tools {
        nodejs 'raj_node'
    }

    triggers {
        pollSCM('H/2 * * * *') // Check every 2 minutes for changes
    }

    stages {
        stage('Checkout Repository') {
            steps {
                echo 'Cloning the GitHub repository...'
                git branch: 'main', url: 'https://github.com/Raj5528/Kiza-frontend.git'
            }
        }

        stage('Install dependencies') {
            steps {
                    powershell 'npm install'
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('front-end/front-end') {
                    powershell 'npm start'
                }
            }
        }
    }

    post {
        success {
            echo '✅ Frontend deployed successfully!'
        }
        failure {
            echo '❌ Deployment failed. Please check logs for details.'
        }
    }
}
